.itemBox {
    flex-direction: row;
    align-items: center;
    padding: 10px;
    border-radius: 10px;
    background-color: #f4f4f4;
    box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1);
    margin: 10px;
    transition: transform 0.2s ease-in-out;
}

.itemIcon {
    width: 50px;
    height: 50px;
    margin-right: 20px;
    border-radius: 10px;
    box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1);
}

.itemName {
    font-size: 20px;
    color: #333333;
}
